#############################################
# Creative Imaging Studio Backend - Example ENV
#############################################

# App
APP_NAME=Creative Imaging Studio
APP_KEY=change-me
PORT=4000
APP_URL=http://localhost:${PORT}

CLIENT_APP_URL=http://localhost:3000

# Auth / JWT
SESSION_SECRET=change-me
JWT_SECRET=change-me
JWT_EXPIRY=86400000

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/creative_imaging_studio_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail (BullMQ worker uses these)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=your_email@example.com
MAIL_FROM_NAME=Creative Imaging Studio

# Admin seed/default user
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Admin

# Social login (optional)
GOOGLE_APP_ID=
GOOGLE_APP_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/redirect

APPLE_PRIVATE_KEY=
APPLE_KEY_ID=
APPLE_TEAM_ID=
APPLE_CLIENT_ID=
APPLE_CALLBACK_URL=

# OpenAI
OPENAI_API_KEY=
OPENAI_PREFER_DALLE=false
OPENAI_DALLE_MODEL=dall-e-3
OPENAI_CHAT_MODEL=gpt-3.5-turbo
CHAT_SYSTEM_PROMPT=You are a friendly AI companion. Keep answers concise and safe.

# Payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (library exists; only configure if you use it)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_API=

# Storage (runtime-selected)
# Option A: S3 / MinIO via AWS_* variables
STORAGE_DRIVER=s3
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Option B: MinIO via MINIO_* variables (also supported)
MINIO_ENDPOINT=
MINIO_BUCKET=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_PORT=
MINIO_USE_SSL=false

# Google Cloud Storage (config exists)
GCP_PROJECT_ID=
GCP_KEY_FILE=
GCP_API_ENDPOINT=
GCP_BUCKET=

# System user
SYSTEM_USERNAME=administrator
SYSTEM_EMAIL=administrator@example.com
SYSTEM_PASSWORD=change-me
